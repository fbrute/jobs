<%= form_with(model: combattant, local: true) do |form| %>
  <% if combattant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(combattant.errors.count, "erreur(s)") %> ont empêché la sauvegarde de ce combattant:</h2>

      <ul>
      <% combattant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nom %>
    <%= form.text_field :nom, id: :combattant_nom %>
  </div>

  <div class="field">
    <%= form.label :points_de_vie %>
    <%= form.number_field :points_de_vie, id: :combattant_points_de_vie %>
  </div>

  <div class="field">
    <%= form.label :points_d_attaque %>
    <%= form.number_field :points_d_attaque, id: :combattant_points_d_attaque %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
